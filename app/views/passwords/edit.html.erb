<h1 class="my-3">Edit Password</h1>

<%= form_with model: Current.user, url: password_path do |form| %>
  <% if Current.user.errors.any? %>
    <ul class="list-group mb-3">
      <% Current.user.errors.full_messages.each do |m| %>
        <li class="list-group-item list-group-item-danger">
          <%= m %>
        </li>
      <% end %>
    </ul>
  <% end %>

  <div class="mb-3">
    <%= form.label :old_password %>
    <%= form.password_field :old_password, class: 'form-control' %>
  </div>
  <div class="mb-3">
    <%= form.label :password %>
    <%= form.password_field :password, class: 'form-control' %>
  </div>
  <div class="mb-3">
    <%= form.label :password_confirmation %>
    <%= form.password_field :password_confirmation, class: 'form-control' %>
  </div>
  <div class="mb-3">
    <%= form.submit "Update Password", class: 'btn btn-primary btn-lg' %>
  </div>
<% end %>
