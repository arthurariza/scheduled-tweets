<h1 class="my-3">Sign In</h1>

<%= form_with model: @user, url: sign_in_path, method: :post do |f| %>

  <div class="mb-3">
    <%= f.label :email %>
    <%= f.email_field :email, class: 'form-control' %>
  </div>
  <div class="mb-3">
    <%= f.label :password %>
    <%= f.password_field :password, class: 'form-control' %>
  </div>

  <div class="mb-3">
    <%= f.submit "Submit", class: 'btn btn-primary btn-lg' %>
  </div>
<% end %>

<div>
  <p>Don't have an account?
    <span>
      <%= link_to "Sign Up", sign_up_path, class: 'text-primary' %>
    </span>
  </p>
</div>